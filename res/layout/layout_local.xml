<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/menu_layout_local"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:descendantFocusability="afterDescendants"
>

<ImageView
    android:layout_width="100dp"
    android:layout_height="70dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="172dp"
    android:src="@drawable/local"
/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:layout_marginLeft="280dp"
    android:text="@string/str_local"
    android:textSize="30dp"
/>
<TextView
    android:id="@+id/tx_local_allcount"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_marginTop="40dp"
    android:layout_marginRight="192dp"
    android:textSize="20dp"
/>
<TextView
    android:id="@+id/tx_local_count"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:layout_toLeftOf="@+id/tx_local_allcount"
    android:textSize="20dp"
    android:textColor="#3495D9"
/>
<com.droidlogic.mboxlauncher.MyScrollView
    android:layout_width="1044dp"
    android:layout_height="522dp"
    android:layout_marginLeft="118dp"
    android:layout_marginTop="85dp"
    android:descendantFocusability="afterDescendants">

<com.droidlogic.mboxlauncher.MyGridLayout
    android:id="@+id/gv_shortcut_local"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:columnCount="6"
    android:rowCount="20"
    android:layout_centerHorizontal="true"
    android:descendantFocusability="afterDescendants"
/>
</com.droidlogic.mboxlauncher.MyScrollView>

<View
    android:layout_width="fill_parent"
    android:layout_height="14dp"
    android:layout_marginTop="65dp"
    android:background="@drawable/line"
/>
<View
    android:layout_width="fill_parent"
    android:layout_height="14dp"
    android:layout_marginTop="605dp"
    android:background="@drawable/line"
/>

<ImageView
    android:layout_width="536dp"
    android:layout_height="104dp"
    android:layout_marginTop="616dp"
    android:layout_centerHorizontal="true"
    android:src="@drawable/prompt_local"
/>
</RelativeLayout>
